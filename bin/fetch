#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "dotenv/load"

$LOAD_PATH.unshift(File.expand_path("../lib", __dir__))
require "trading_fetch_eodhd"

begin
	api_token = TradingFetchEodhd::Config.eodhd_api_token!
	output_dir = TradingFetchEodhd::Config.eodhd_output_dir!
rescue TradingFetchEodhd::Config::Error => e
	abort e.message
end

output_path = TradingFetchEodhd::Fetch.fetch_mcd_csv!(api_token: api_token, output_dir: output_dir)
puts "Wrote #{output_path}"
