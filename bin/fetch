#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "dotenv/load"
require "fileutils"
require "net/http"
require "uri"

api_token = ENV["EODHD_API_TOKEN"].to_s.strip
abort "Missing EODHD_API_TOKEN in environment (.env)" if api_token.empty?

uri = URI("https://eodhd.com/api/eod/MCD.US")
uri.query = URI.encode_www_form(
  api_token: api_token,
  fmt: "csv"
)

response = Net::HTTP.get_response(uri)

unless response.is_a?(Net::HTTPSuccess)
  body_preview = response.body.to_s[0, 500]
  abort "Request failed: HTTP #{response.code} #{response.message}\n#{body_preview}"
end

output_dir = "data"
FileUtils.mkdir_p(output_dir)

output_path = File.join(output_dir, "MCD.US.csv")
File.write(output_path, response.body)

puts "Wrote #{output_path}"
